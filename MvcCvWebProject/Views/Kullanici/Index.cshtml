@using MvcCvWebProject.Models.Entity
@model List<TblKullanici>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="col-md-12">
    <!-- general form elements disabled -->
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">Kullanıcı Düzenleme Paneli</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">

            <form method="post">
                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label>Kullanıcı Adı</label>
                                <input type="text" class="form-control" name="KullaniciAdi" value="@item.KullaniciAdi">

                            </div>
                        </div>
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label>Kullanıcı Şifre</label>
                                <input type="password" class="form-control" name="KullaniciSifre" value="@item.KullaniciSifre">

                            </div>
                        </div>
                    </div>
                }
                <button class="btn btn-success">Güncelle</button>
            </form>
        </div>
        <!-- /.card-body -->
    </div>

</div>