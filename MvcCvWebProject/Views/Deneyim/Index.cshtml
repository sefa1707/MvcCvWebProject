@using MvcCvWebProject.Models.Entity
@model List<TblDeneyim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Deneyim Listesi</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th width="10">ID</th>
                    <th width="50">Ünvan</th>
                    <th>Kuruluş</th>
                    <th>Açıklama</th>
                    <th>Durum</th>
                    <th width="50">Başlangıç Tarihi</th>
                    <th width="50">Bitiş Tarihi</th>
                    <th>Düzenle</th>
                    <th>Aktif</th>
                    <th>Pasif</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DeneyimID</td>
                        <td>@item.DeneyimUnvan</td>
                        <td>@item.DeneyimKurulus</td>
                        <td>@item.DeneyimAciklama</td>
                        <td>@item.DeneyimDurum</td>
                        <td>@item.DeneyimBaslangicTarih</td>
                        <td>@item.DeneyimBitisTarih</td>
                        <td><a class="btn btn-primary btn-sm" href="/Deneyim/DeneyimGetir/@item.DeneyimID"><i class="fas fa-pencil-alt"></i>&nbsp;&nbsp;Düzenle</a></td>
                        <td><a class="btn btn-success btn-sm" href="/Deneyim/DeneyimAktifYap/@item.DeneyimID"><i class="fas fa-pencil-alt"></i>&nbsp;&nbsp;Aktif</a></td>
                        <td><a class="btn btn-warning btn-sm" href="/Deneyim/DeneyimPasifYap/@item.DeneyimID"><i class="fas fa-pencil-alt"></i>&nbsp;&nbsp;Pasif</a></td>
                        <td><a class="btn btn-danger btn-sm" href="/Deneyim/DeneyimSil/@item.DeneyimID"><i class="fas fa-trash"></i>&nbsp;&nbsp;Sil</a></td>
                    </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Ünvan</th>
                    <th>Kuruluş</th>
                    <th>Açıklama</th>
                    <th>Durum</th>
                    <th>Başlangıç Tarihi</th>
                    <th>Bitiş Tarihi</th>
                    <th>Düzenle</th>
                    <th>Aktif</th>
                    <th>Pasif</th>
                    <th>Sil</th>
                </tr>
            </tfoot>
        </table>
        <br />
        <a href="/Deneyim/DeneyimEkle/" class="btn btn-success">Yeni Deneyim Ekle</a>
    </div>

</div>
<br />


