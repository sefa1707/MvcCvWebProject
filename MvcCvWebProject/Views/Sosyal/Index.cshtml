@using MvcCvWebProject.Models.Entity
@model List<TblSosyalMedya>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Sosyal Medya Listesi</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Sosyal Medya Adı</th>
                    <th>Link</th>
                    <th>Durum</th>
                    <th>İcon</th>
                    <th>Düzenle</th>
                    <th>Aktif</th>
                    <th>Pasif</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SosyalID</td>
                        <td>@item.SosyalAd</td>
                        <td>@item.SosyalLink</td>
                        <td>@item.SosyalDurum</td>
                        <td>@item.Sosyalicon</td>
                        <td><a href="/Sosyal/SosyalDuzenle/@item.SosyalID" class="btn btn-danger">Düzenle</a></td>
                        <td><a href="/Sosyal/AktifYap/@item.SosyalID" class="btn btn-info">Aktif</a></td>
                        <td><a href="/Sosyal/PasifYap/@item.SosyalID" class="btn btn-info">Pasif</a></td>
                        <td><a href="/Deneyim/DeneyimSil/@item.SosyalID" class="btn btn-danger">Sil</a></td>
                    </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Sosyal Medya Adı</th>
                    <th>Link</th>
                    <th>Durum</th>
                    <th>İcon</th>
                    <th>Düzenle</th>
                    <th>Aktif</th>
                    <th>Pasif</th>
                    <th>Sil</th>
                </tr>
            </tfoot>
        </table>
        <br />
        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-ekle">
            Sosyal Medya Hesabı Ekle
        </button>
    </div>
</div>


<div class="modal fade" id="modal-ekle">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Default Modal</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="/Sosyal/Ekle/">
                <div class="modal-body">

                    <label>Sosyal Medya Adı</label>
                    <input type="text" name="SosyalAd" class="form-control" />
                    <label>Sosyal Medya Linki</label>
                    <input type="text" name="SosyalLink" class="form-control" />
                    <label>Sosyal Medya İcon</label>
                    <input type="text" name="Sosyalicon" class="form-control" />

                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
