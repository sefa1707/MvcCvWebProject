<body class="img js-fullheight" style="background-image: url(/LoginTema/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Designed By Sefa AŞIK</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">MVC CV Web Project</h3>
                        <form method="post" class="signin-form">
                            <div class="form-group">
                                <input type="text" name="KullaniciAdi" class="form-control" placeholder="Kullanıcı Adı" required>
                            </div>
                            <div class="form-group">
                                <input name="KullaniciSifre" type="password" class="form-control" placeholder="Parola" required >
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">GİRİŞ YAP</button>
                            </div>
                        </form>
                        <p class="w-100 text-center">Sefa AŞIK - İletişim</p>
                        <div class="social d-flex text-center">
                            <a href="https://www.facebook.com/profile.php?id=100000546300766&locale=tr_TR" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
