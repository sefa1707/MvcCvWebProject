@using MvcCvWebProject.Models.Entity
@model List<TblYetenek>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@{ string renk = " ";
    string labelrenk = " ";}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Yetenek Listesi</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Başlık</th>
                                    <th>Oran</th>
                                    <th style="width: 40px">%</th>
                                    <th style="width: 120px">Düzenle</th>
                                    <th style="width: 120px">Sil</th>
                                    <th style="width: 120px">Aktif</th>
                                    <th style="width: 120px">Pasif</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (item.YetenekOran >= 0 && item.YetenekOran <= 50)
                                    {
                                        renk = "progress - bar progress - bar - danger";
                                        labelrenk = "badge bg-danger";
                                    }
                                    if (item.YetenekOran >= 50 && item.YetenekOran <= 75)
                                    {
                                        renk = "progress-bar bg-warning";
                                        labelrenk = "badge bg-warning";
                                    }
                                    if (item.YetenekOran >= 75 && item.YetenekOran <= 85)
                                    {
                                        renk = "progress-bar bg-primary";
                                        labelrenk = "badge bg-primary";
                                    }
                                    if (item.YetenekOran >= 85 && item.YetenekOran <= 100)
                                    {
                                        renk = "progress-bar bg-success";
                                        labelrenk = "badge bg-success";
                                    }
                                    <tr>
                                        <td>@item.YetenekID</td>
                                        <td>@item.YetenekAciklama</td>
                                        <td>
                                            <div class="progress progress-xs">
                                                <div class="@renk" style="width: @item.YetenekOran%"></div>
                                            </div>
                                        </td>
                                        <td><span class="@labelrenk">@item.YetenekOran%</span></td>

                                        <td>
                                            <a class="btn btn-info btn-sm" href="/Yetenek/YetenekGetir/@item.YetenekID">
                                                <i class="fas fa-pencil-alt">
                                                </i>
                                                Düzenle
                                            </a>
                                        </td>
                                        <td>
                                            <a class="btn btn-danger btn-sm" href="/Yetenek/YetenekSil/@item.YetenekID">
                                                <i class="fas fa-trash">
                                                </i>
                                                Sil
                                            </a>
                                        </td>
                                        <td>
                                            <a class="btn btn-success btn-sm" href="#">
                                                <i class="fas fa-plus">
                                                </i>
                                                Aktif
                                            </a>
                                        </td>
                                        <td>
                                            <a class="btn btn-warning btn-sm" href="#">
                                                <i class="fas fa-minus">
                                                </i>
                                                Pasif
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer clearfix">
                        <a href="/Yetenek/YetenekEkle/" class="btn btn-success">Yeni Yetenek Ekle</a>
                    </div>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>

    <!-- /.container-fluid -->
</section>