@using MvcCvWebProject.Models.Entity
@model List<TblHakkimda>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>

      
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    @foreach (var item in Model)
    {
        <title>@item.HakkimdaAd @item.HakkimdaSoyad - CV</title>
    }
    <link rel="icon" type="image/x-icon" href="~/VitrinTema/assets/img/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/VitrinTema/css/styles.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">
            @foreach (var item in Model)
            {

                <span class="d-block d-lg-none">@item.HakkimdaAd @item.HakkimdaSoyad</span>
                <span class="d-none d-lg-block"><img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="@item.HakkimdaGorsel" alt="" /></span>

            }
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#about">HAKKIMDA</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#experience">DENEYİMLERİM</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#education">EĞİTİMLERİM</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#skills">YETENEKLERİM</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#interests">Hobilerim</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#awards">Sertifikalarım</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#iletisim">İletişim</a></li>
            </ul>
        </div>
    </nav>
    <!-- Page Content-->
    <div class="container-fluid p-0">
        <!-- About-->
        <section class="resume-section" id="about">



            <div class="resume-section-content">
                @foreach (var item in Model)
                {
                    <h1 class="mb-0">
                        @item.HakkimdaAd
                        <span class="text-primary">@item.HakkimdaSoyad</span>
                    </h1>
                    <div class="subheading mb-5">
                        @item.HakkimdaAdres · @item.HakkimdaTelefon ·
                        <a href="mailto:@item.HakkimdaMail">@item.HakkimdaMail</a>
                    </div>
                    <p class="lead mb-5">@item.HakkimdaAciklama</p>
                }
                @Html.Action("SosyalMedya")
            </div>

        </section>
        <hr class="m-0" />
        <!-- Experience-->
        @Html.Action("Deneyim")
        <hr class="m-0" />
        <!-- Education-->
        @Html.Action("Egitim")
        <hr class="m-0" />
        <!-- Skills-->
        @Html.Action("Yetenek")
        <hr class="m-0" />
        <!-- Interests-->
        @Html.Action("Hobi")
        <hr class="m-0" />
        <!-- Awards-->
        @Html.Action("Sertifika")
        <!-- Contact-->
        @Html.Action("iletisim")
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/VitrinTema/js/scripts.js"></script>

</body>
</html>
